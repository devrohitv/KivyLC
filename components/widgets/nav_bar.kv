<NavBar>:
	size_hint_y: None
	height: dp(50)
	BoxLayout:
		size_hint: 1, 1
		pos_hint: {'top': 1}
		background_normal: ''
		canvas.before:
			Color:
				rgba: (107/255, 22/255, 138/155, 1)
			RoundedRectangle:
				size: self.size
				pos: self.pos
				radius: [12]

		Label:
			id: navbar_greeting
			text: root.greeting
			halign: 'center'
			size_hint: (.7, 1)
			font_size: sp(20)
			font_name: 'Poppins-Bold'
		BoxLayout:
			size_hint: .3, 1
			Spinner:
				text: "12th"
				background_color: (255, 255, 255, 0)
				values: '11th', '10th', '9th', '8th'

			Button:
				background_normal: "assets/navigation_tools/account.png"
				size_hint: None, None
				size: dp(62), dp(62)
				pos_hint: {'center_y': .5}
				on_press:
					app.root.current = 'Seventh'
					#root.manager.transition.direction = "left"

